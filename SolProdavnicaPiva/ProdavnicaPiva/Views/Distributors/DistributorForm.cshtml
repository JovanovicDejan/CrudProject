@model ProdavnicaPiva.ViewModels.DistributorViewModel
@{
    ViewBag.Title = "DistributorForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Distributor Form</h2>

@using (Html.BeginForm("Save", "Distributors"))
{
    @Html.ValidationSummary(true, "Fix the following errors!")
    <div class="form-group">
        @Html.LabelFor(b => b.Distributor.Name)
        @Html.TextBoxFor(b => b.Distributor.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.Distributor.Name, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.Distributor.Country)
        @Html.TextBoxFor(b => b.Distributor.Country, new {@class = "form-control"})
        @Html.ValidationMessageFor(d => d.Distributor.Country, null, new {@class = "text-danger"})
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}