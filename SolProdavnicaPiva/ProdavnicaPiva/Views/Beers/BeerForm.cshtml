@model ProdavnicaPiva.ViewModels.BeerViewModel
@{
    ViewBag.Title = "BeerForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Beer info</h2>
@using (Html.BeginForm("Save", "Beers"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
    <div class="form-group">
        @Html.LabelFor(d => d.Beer.Brand.Name)
        @Html.DropDownListFor(b => b.Beer.BrandId, new SelectList(Model.Brands, "Id", "Name"), "Select Brand", new { @class = "form-control" })
        @Html.ValidationMessageFor(d => d.Beer.BrandId, null, new {@class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(d => d.Beer.Distributor.Name)
        @Html.DropDownListFor(d => d.Beer.DistributorId, new SelectList(Model.Distributors, "Id", "Name"), "Select Distributor", new { @class = "form-control" })
        @Html.ValidationMessageFor(d => d.Beer.DistributorId, null, new { @class = "text-danger" })

    </div>
    <div class="form-group">
        @Html.LabelFor(d => d.Beer.Manufacturer.Name)
        @Html.DropDownListFor(b => b.Beer.ManufacturerId, new SelectList(Model.Manufacturers, "Id", "Name"), "Select Manufacturer", new { @class = "form-control" })
        @Html.ValidationMessageFor(d => d.Beer.ManufacturerId, null, new { @class = "text-danger" })

    </div>
    @Html.HiddenFor(b => b.Beer.Id)
    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-primary" >Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
