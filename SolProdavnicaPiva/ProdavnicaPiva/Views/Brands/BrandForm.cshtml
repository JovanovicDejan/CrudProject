@model ProdavnicaPiva.ViewModels.BrandViewModel
@{
    ViewBag.Title = "FormBrand";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>FormBrand</h2>

@using (Html.BeginForm("Save", "Brands"))
{
    @Html.ValidationSummary(true,"Fix the following errors!")
    <div class="form-group">
        @Html.LabelFor(b => b.Brand.Name)
        @Html.TextBoxFor(b => b.Brand.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.Brand.Name, null , new {@class = "text-danger"})
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.Brand.DateMade)
        @Html.TextBoxFor(b => b.Brand.DateMade, "{0:dd MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.Brand.DateMade, null, new { @class = "text-danger" })
    </div>
        @Html.HiddenFor(b => b.Brand.Id)

    <button type="submit" class="btn btn-primary">Save</button>
}